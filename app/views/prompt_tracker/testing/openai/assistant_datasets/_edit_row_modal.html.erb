<!-- Edit Row Modal -->
<div class="modal fade" id="editRowModal-<%= dataset_row.id %>" tabindex="-1" data-modal-fix-target="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Row</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <%= form_with url: PromptTracker::Engine.routes.url_helpers.testing_openai_assistant_dataset_dataset_row_path(assistant, dataset, dataset_row), method: :patch do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= label_tag "row_data[interlocutor_simulation_prompt]", "Interlocutor Simulation Prompt", class: "form-label" %>
            <%= text_area_tag "row_data[interlocutor_simulation_prompt]", dataset_row.row_data["interlocutor_simulation_prompt"], class: "form-control", rows: 5, required: true %>
            <div class="form-text">
              <strong>Describe the simulated user's persona and scenario.</strong> This prompt will be used by an LLM to generate realistic conversational messages.
            </div>
          </div>
          <div class="mb-3">
            <%= label_tag "row_data[max_turns]", "Max Turns", class: "form-label" %>
            <%= number_field_tag "row_data[max_turns]", dataset_row.row_data["max_turns"] || 3, class: "form-control", min: 1, max: 20 %>
            <div class="form-text">Maximum number of conversation turns (1-20)</div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Update Row", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
