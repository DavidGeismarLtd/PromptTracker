<td data-column="actions">
  <%= button_to PromptTracker::Engine.routes.url_helpers.rerun_testing_run_path(run),
                method: :post,
                class: "btn btn-sm btn-outline-secondary me-1",
                title: "Re-run test with same configuration",
                form: { style: "display: inline;" } do %>
    <i class="bi bi-arrow-clockwise"></i>
  <% end %>

  <button type="button"
          class="btn btn-sm btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#human-evaluation-modal-<%= run.id %>"
          title="Add Human Evaluation">
    <i class="bi bi-person-check"></i>
  </button>
   <%= render "prompt_tracker/shared/human_evaluation_modal_form",
                   record: run,
                   form_url: PromptTracker::Engine.routes.url_helpers.  testing_run_human_evaluations_path(run),
                   context: 'testing' %>
</td>
