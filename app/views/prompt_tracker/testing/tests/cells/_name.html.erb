<td data-column="name">
  <strong><%= test.name %></strong>
  <% if test.single_turn? %>
    <span class="badge bg-info ms-1" title="Single-turn test"><i class="bi bi-chat-left-text"></i></span>
  <% else %>
    <span class="badge bg-purple ms-1" title="Conversational test"><i class="bi bi-chat-dots"></i></span>
  <% end %>
  <% unless test.enabled? %>
    <span class="badge bg-secondary ms-1">Disabled</span>
  <% end %>
  <% if test.description.present? %>
    <br><small class="text-muted"><%= truncate(test.description, length: 80) %></small>
  <% end %>
</td>
