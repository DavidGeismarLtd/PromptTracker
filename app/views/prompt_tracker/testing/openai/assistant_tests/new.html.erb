<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item"><%= link_to "OpenAI Assistants", testing_openai_assistants_path %></li>
  <li class="breadcrumb-item"><%= link_to @assistant.name, testing_openai_assistant_path(@assistant) %></li>
  <li class="breadcrumb-item active">New Test</li>
<% end %>

<div class="row">
  <div class="col-lg-8">
    <h1 class="mb-4">
      <i class="bi bi-plus-circle"></i> Create New Test
    </h1>
    <p class="text-muted">Create an automated test for <%= @assistant.name %></p>

    <%= render "form", assistant: @assistant, test: @test %>
  </div>
</div>

