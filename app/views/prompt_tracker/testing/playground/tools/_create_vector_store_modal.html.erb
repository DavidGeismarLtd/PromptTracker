<%#
  Create Vector Store Modal

  No local variables needed - uses Stimulus controller targets
%>

<div class="modal fade" id="createVectorStoreModal" tabindex="-1" data-playground-file-search-target="createVectorStoreModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="bi bi-cloud-upload me-2"></i>Create Vector Store
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label">Name <span class="text-danger">*</span></label>
          <input type="text"
                 class="form-control"
                 placeholder="e.g., Product Documentation"
                 data-playground-file-search-target="vectorStoreName">
          <div class="form-text">A descriptive name for your vector store.</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Files <span class="text-danger">*</span></label>
          <input type="file"
                 class="form-control"
                 multiple
                 accept=".txt,.md,.pdf,.docx,.doc,.html,.json,.csv"
                 data-playground-file-search-target="vectorStoreFiles">
          <div class="form-text">
            Upload files to include in the vector store. Supported: TXT, MD, PDF, DOCX, HTML, JSON, CSV.
          </div>
        </div>
        <div class="alert alert-info py-2 d-none" data-playground-file-search-target="createVectorStoreStatus">
          <i class="bi bi-hourglass-split me-1"></i>
          <span data-playground-file-search-target="createVectorStoreStatusText">Creating...</span>
        </div>
        <div class="alert alert-danger py-2 d-none" data-playground-file-search-target="createVectorStoreError">
          <i class="bi bi-exclamation-triangle me-1"></i>
          <span data-playground-file-search-target="createVectorStoreErrorText"></span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button"
                class="btn btn-primary"
                data-action="click->playground-file-search#createVectorStore"
                data-playground-file-search-target="createVectorStoreButton">
          <i class="bi bi-cloud-upload me-1"></i>Create & Upload
        </button>
      </div>
    </div>
  </div>
</div>
