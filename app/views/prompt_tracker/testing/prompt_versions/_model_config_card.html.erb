<%
  # Local variables expected:
  # - version: PromptVersion object

  config = model_config_presenter(version)
  return unless config.present?
%>

<div class="card h-100">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h6 class="mb-0">
      <i class="bi bi-<%= config.api_icon %>"></i> Model Configuration
    </h6>
    <% if config.provider.present? %>
      <span class="badge" style="background-color: <%= config.provider_color %>;">
        <%= config.provider.titleize %>
      </span>
    <% end %>
  </div>
  <div class="card-body">
    <!-- Primary Configuration -->
    <% if config.model.present? %>
      <div class="mb-3 pb-3 border-bottom">
        <div class="d-flex align-items-center justify-content-between mb-2">
          <small class="text-muted">Model</small>
          <i class="bi bi-cpu text-primary"></i>
        </div>
        <code class="d-block p-2 bg-light rounded"><%= config.model %></code>
      </div>
    <% end %>

    <% if config.api.present? %>
      <div class="mb-3 pb-3 border-bottom">
        <div class="d-flex align-items-center justify-content-between mb-2">
          <small class="text-muted">API Type</small>
          <i class="bi bi-<%= config.api_icon %> text-info"></i>
        </div>
        <span class="badge bg-info"><%= config.api.humanize %></span>
      </div>
    <% end %>

    <!-- Tools -->
    <% if config.normalized_tools.any? %>
      <div class="mb-3 pb-3 border-bottom">
        <div class="d-flex align-items-center justify-content-between mb-2">
          <small class="text-muted">
            <i class="bi bi-tools"></i> Enabled Tools
          </small>
          <span class="badge bg-secondary"><%= config.normalized_tools.count %></span>
        </div>

        <div class="d-flex flex-wrap gap-2">
          <% config.normalized_tools.each do |tool| %>
            <% meta = config.tool_metadata(tool) %>
            <span class="badge d-flex align-items-center gap-1 px-2 py-1"
                  style="background-color: <%= meta[:color] %>; font-size: 0.875rem;">
              <i class="bi bi-<%= meta[:icon] %>"></i>
              <%= meta[:name] %>
            </span>
          <% end %>
        </div>

        <!-- Tool Configuration (Collapsible) -->
        <% if config.tool_config.any? %>
          <div class="accordion accordion-flush mt-3" id="<%= config.accordion_id %>">
            <div class="accordion-item border-0">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed px-0 py-2 bg-transparent shadow-none"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#<%= config.accordion_id %>-collapse"
                        style="font-size: 0.875rem; color: #6B7280;">
                  <i class="bi bi-gear me-2"></i>
                  Tool Configuration Details
                </button>
              </h2>
              <div id="<%= config.accordion_id %>-collapse"
                   class="accordion-collapse collapse"
                   data-bs-parent="#<%= config.accordion_id %>">
                <div class="accordion-body px-0 py-2">
                  <% config.tool_config.each do |tool_name, tool_cfg| %>
                    <div class="mb-3">
                      <div class="d-flex align-items-center gap-2 mb-2">
                        <% meta = config.tool_metadata(tool_name) %>
                        <i class="bi bi-<%= meta[:icon] %>" style="color: <%= meta[:color] %>;"></i>
                        <strong class="small"><%= meta[:name] %></strong>
                      </div>

                      <% if tool_cfg.is_a?(Array) && tool_name == 'functions' %>
                        <!-- Functions list -->
                        <div class="ms-3">
                          <% tool_cfg.each_with_index do |func, idx| %>
                            <div class="<%= 'mb-2 pb-2 border-bottom' if idx < tool_cfg.length - 1 %>">
                              <div class="d-flex align-items-start gap-2 mb-1">
                                <i class="bi bi-arrow-return-right text-muted small"></i>
                                <div class="flex-grow-1">
                                  <code class="small"><%= func['name'] %></code>
                                  <% if func['description'].present? %>
                                    <p class="text-muted small mb-1 mt-1"><%= func['description'] %></p>
                                  <% end %>

                                  <% if func['parameters'].present? %>
                                    <details class="mt-1">
                                      <summary class="small text-muted" style="cursor: pointer;">
                                        <i class="bi bi-chevron-right"></i> Parameters
                                      </summary>
                                      <pre class="mb-0 mt-1 p-2 bg-light rounded small" style="font-size: 0.75rem;"><code><%= JSON.pretty_generate(func['parameters']) %></code></pre>
                                    </details>
                                  <% end %>
                                </div>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      <% else %>
                        <!-- Generic config display -->
                        <pre class="mb-0 p-2 bg-light rounded small" style="font-size: 0.75rem;"><code><%= JSON.pretty_generate(tool_cfg) %></code></pre>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Parameters -->
    <% if config.temperature.present? || config.max_tokens.present? || config.top_p.present? || config.frequency_penalty.present? || config.presence_penalty.present? %>
      <div class="mb-2">
        <small class="text-muted d-block mb-2">
          <i class="bi bi-sliders"></i> Parameters
        </small>

        <table class="table table-sm table-borderless mb-0">
          <tbody>
            <% if config.temperature.present? %>
              <tr>
                <td class="text-muted" style="width: 60%;">Temperature</td>
                <td class="text-end">
                  <span class="badge bg-secondary"><%= config.temperature %></span>
                </td>
              </tr>
            <% end %>

            <% if config.max_tokens.present? %>
              <tr>
                <td class="text-muted">Max Tokens</td>
                <td class="text-end">
                  <span class="badge bg-secondary"><%= config.max_tokens %></span>
                </td>
              </tr>
            <% end %>

            <% if config.top_p.present? %>
              <tr>
                <td class="text-muted">Top P</td>
                <td class="text-end">
                  <span class="badge bg-secondary"><%= config.top_p %></span>
                </td>
              </tr>
            <% end %>

            <% if config.frequency_penalty.present? %>
              <tr>
                <td class="text-muted">Frequency Penalty</td>
                <td class="text-end">
                  <span class="badge bg-secondary"><%= config.frequency_penalty %></span>
                </td>
              </tr>
            <% end %>

            <% if config.presence_penalty.present? %>
              <tr>
                <td class="text-muted">Presence Penalty</td>
                <td class="text-end">
                  <span class="badge bg-secondary"><%= config.presence_penalty %></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>

    <!-- Other Configuration (anything not explicitly handled above) -->
    <%
      handled_keys = ['provider', 'api', 'model', 'temperature', 'max_tokens', 'top_p', 'frequency_penalty', 'presence_penalty', 'tools', 'tool_config']
      other_config = config.model_config.except(*handled_keys)
    %>

    <% if other_config.any? %>
      <div class="mt-3 pt-3 border-top">
        <small class="text-muted d-block mb-2">
          <i class="bi bi-three-dots"></i> Additional Settings
        </small>
        <% other_config.each do |key, value| %>
          <div class="mb-2">
            <small class="text-muted d-block"><%= key.to_s.titleize %></small>
            <% if value.is_a?(Hash) || value.is_a?(Array) %>
              <pre class="mb-0 p-2 bg-light rounded small"><code><%= JSON.pretty_generate(value) %></code></pre>
            <% else %>
              <strong><%= value %></strong>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
