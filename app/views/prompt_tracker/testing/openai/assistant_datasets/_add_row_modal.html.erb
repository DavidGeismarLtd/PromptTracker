<!-- Add Row Modal -->
<div class="modal fade" id="addRowModal" tabindex="-1" data-modal-fix-target="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Row</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <%= form_with url: PromptTracker::Engine.routes.url_helpers.testing_openai_assistant_dataset_dataset_rows_path(assistant, dataset), method: :post do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= label_tag "row_data[interlocutor_simulation_prompt]", "Interlocutor Simulation Prompt", class: "form-label" %>
            <%= text_area_tag "row_data[interlocutor_simulation_prompt]", "", class: "form-control", rows: 5, required: true, placeholder: "You are a 35-year-old patient experiencing severe tinnitus after attending a loud concert. You're worried about permanent hearing damage and want to know if you need immediate treatment. Be concerned but cooperative." %>
            <div class="form-text">
              <strong>Describe the simulated user's persona and scenario.</strong> This prompt will be used by an LLM to generate realistic conversational messages.
              <br><strong>Example:</strong> "You are a parent of a 7-year-old child with recurring ear infections. You're frustrated with previous treatments and skeptical about antibiotics. Ask detailed questions."
            </div>
          </div>
          <div class="mb-3">
            <%= label_tag "row_data[max_turns]", "Max Turns", class: "form-label" %>
            <%= number_field_tag "row_data[max_turns]", 3, class: "form-control", min: 1, max: 20 %>
            <div class="form-text">Maximum number of conversation turns (1-20)</div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Add Row", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
