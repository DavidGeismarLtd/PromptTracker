<tr id="test_row_<%= test.id %>">
  <%= render "prompt_tracker/testing/tests/prompt_versions/cells/name", test: test, prompt: prompt, version: version %>
  <%= render "prompt_tracker/testing/tests/prompt_versions/cells/template", test: test, version: version %>
  <%= render "prompt_tracker/testing/tests/shared/cells/evaluator_configs", test: test %>
  <%= render "prompt_tracker/testing/tests/shared/cells/status", test: test %>
  <%= render "prompt_tracker/testing/tests/shared/cells/last_run", test: test %>
  <%= render "prompt_tracker/testing/tests/shared/cells/total_runs", test: test %>
  <%= render "prompt_tracker/testing/tests/prompt_versions/cells/actions", test: test, prompt: prompt, version: version %>
</tr>

<%= render "prompt_tracker/testing/tests/run_test_modal",
    testable: version,
    test: test,
    form_url: run_testing_prompt_prompt_version_test_path(prompt, version, test),
    modal_id: "runTestModal-#{test.id}",
    modal_title: "Run Test: #{test.name}",
    submit_button_text: "Run Test",
    datasets_path: testing_prompt_prompt_version_datasets_path(prompt, version),
    intro_text: "Choose how to run this test:",
    dataset_mode_description: "Execute test for all rows in a dataset",
    custom_mode_description: "Execute test once with manually entered values",
    custom_variables_context: "Enter values for the prompt variables:" %>
